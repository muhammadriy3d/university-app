{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js",
    "metro.config.js",
    "__tests__/**/*.test.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "./*"
      ],
      "tests": [
        "tests/*"
      ],
      "@components/*": [
        "src/res/components/*"
      ],
      "@layout/*": [
        "src/res/layout/*"
      ],
      "tailwind.config": [
        "./tailwind.config.js"
      ]
    }
  }
}